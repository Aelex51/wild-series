{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}
{% endblock %}

{% block body %}
<img src="{{ vich_uploader_asset(program) }}" alt="{{ program.title }}">

	<div class="media">
		<div class="media-body">
			<h1 class="mt-0">{{ program.title }}</h1>
			{# <p>{{ program.seasons }}</p> #}
			{# <p>{{ program.synopsis }}</p>
			<p>Catégorie :{{ program.category.name }}</p> #}
		</div>
		<div>
			{% for season in program.seasons %}
				<p>Numéro de saison:
					{{ season.number }}</p>
				<p>Année de diffusion:
					{{ season.year }}</p>
				<p>Description:
					{{ season.description }}</p>
				<a href="{{ path("program_season_show", { program: program.id, season: season.id }) }}">Voir la fiche</a>
			{% endfor %}
		</div>
	</div>
	<strong>Acteurs :</strong>
	<ul>
		{% for actor in program.actors %}
			<li>{{ actor.name }}</li>
		{% else %}
			<li>Aucun acteur pour cette série</li>
		{% endfor %}
	</ul>

	<h1>Durée totale de la série<h1>
	{{ programDuration }}
	<a href="{{ path('program_index') }}">
		Retour à la liste des programmes
	</a>
{% endblock %}
